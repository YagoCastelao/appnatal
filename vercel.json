{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "installCommand": "cd frontend && npm install",
  "buildCommand": "cd frontend && node ./node_modules/vite/bin/vite.js build",
  "routes": [
    { "src": "/(.*)", "dest": "frontend/dist/$1" }
  ]
}
